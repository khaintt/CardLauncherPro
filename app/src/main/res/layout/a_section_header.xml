<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_20dip"
    android:layout_marginRight="@dimen/margin_20dip"
    android:layout_marginTop="@dimen/margin_10dip"
    android:id="@+id/rel_section_header">

    <RelativeLayout
        android:background="@drawable/shape_header_circle_corner"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_10dip"
            android:id="@+id/iv_drop_direct"
            android:src="@drawable/ic_arrow_drop_down_white_18dp"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/margin_20dip"
            android:layout_height="@dimen/margin_20dip" />

        <TextView
            android:layout_marginLeft="@dimen/margin_20dip"
            android:textStyle="bold"
            android:id="@+id/tv_section_name"
            android:textSize="@dimen/font_size_16sp"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>