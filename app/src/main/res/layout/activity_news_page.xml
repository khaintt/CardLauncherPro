<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leanderli.dev.cardlauncherpro.NewsPageActivity"
    android:background="@color/colorHomeGroupListBg"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text=" + "
            android:id="@+id/btn_add_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_below="@+id/btn_add_widget"
            android:id="@+id/linl_app_news_page_main"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
