<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/margin_10dip"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_size_16sp"
        android:text="待分组应用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_no_apps"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_20dip"
        android:layout_gravity="center_horizontal"
        android:text="(所有应用已分组，你可以重新编辑分组)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridView
        android:background="@color/colorSettingBg"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/margin_10dip"
        android:layout_weight="1"
        android:verticalSpacing="@dimen/margin_20dip"
        android:padding="@dimen/margin_10dip"
        android:id="@+id/gv_unselected_app"
        android:numColumns="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_floatingLabelText="分组名称"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="@dimen/margin_20dip"
        android:hint="键入分组名称"
        android:id="@+id/et_group_name"
        android:layout_marginRight="@dimen/margin_20dip"
        android:layout_marginLeft="@dimen/margin_20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/margin_10dip"
        android:layout_marginBottom="@dimen/margin_10dip"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:textColor="@color/colorSettingHint"
            style="@style/Base.Widget.AppCompat.Button"
            android:text="取消"
            android:id="@+id/btn_dismiss"
            android:layout_marginLeft="@dimen/margin_20dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginRight="@dimen/margin_20dip"
            android:layout_weight="1"
            android:text="确定"
            android:id="@+id/btn_done"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>









</LinearLayout>