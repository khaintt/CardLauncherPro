<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/colorSettingBg"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/card_radius_5dip"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_marginLeft="@dimen/margin_20dip"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_name"
                android:textColor="@color/colorLittleBlack"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_18sp"
                android:text="TextView"
                android:layout_marginLeft="@dimen/margin_20dip"
                android:layout_toRightOf="@id/iv_icon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.leanderli.dev.cardlauncherpro.view.SmoothCheckBox
                android:id="@+id/ckb_"
                app:color_unchecked_stroke="@color/colorSettingBg"
                app:color_unchecked="@color/colorSettingBg"
                android:layout_marginRight="@dimen/margin_20dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>