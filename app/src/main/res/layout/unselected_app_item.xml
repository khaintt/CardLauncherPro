<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_5dip"
        android:layout_marginBottom="@dimen/margin_5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel_icon_ckb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.leanderli.dev.cardlauncherpro.view.SmoothCheckBox
                app:color_unchecked_stroke="@color/colorSettingBg"
                app:color_unchecked="@color/colorSettingBg"
                android:layout_marginLeft="@dimen/margin_5dip"
                android:id="@+id/ckb_"
                android:layout_alignBottom="@id/iv_icon"
                android:layout_toEndOf="@id/iv_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/iv_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/margin_10dip"
            android:layout_below="@+id/rel_icon_ckb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="middle"
                android:singleLine="true"
                android:id="@+id/tv_name"
                android:layout_centerInParent="true"
                android:textSize="@dimen/font_size_14sp"
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>